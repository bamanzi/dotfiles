[extdiff]
cmd.vimdiff = vimdiff
# or `hg extdiff -p vimdiff ....`

cmd.gvimdiff = gvimdiff

cmd.diffuse = diffuse
# or `hg extdiff -p diffuse ....`

cmd.ediff = sh
opts.ediff = -c 'if [ -d $0 ]; then emacsclient --eval "(ediff-directories \"$0\" \"$1\" \"\")"; else emacsclient --eval "(ediff-files \"$0\" \"$1\")"; fi' 
