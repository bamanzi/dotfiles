## put the following line into your ~/.bashrc
# [ -z "$PS1" ] && source ~/.bashrc_local

for f in ~/.bash/plugins/*.sh; do
    . $f
done

export HISTCONTROL=ignoreboth

alias dir="ls --file-type --color"
alias ll='ls -l'
alias la='ls -A'
#alias l='ls -CF' #conflict with bashmarks
alias ls-l="ls -l"

alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

